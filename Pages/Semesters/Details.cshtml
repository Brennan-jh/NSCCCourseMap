@page
@model nscccoursemap_Brennan_Holmes.Pages.Semesters.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Semester</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.AcademicYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.AcademicYear.Title)
        </dd>
    </dl>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Course Code</th>
                <th>Diploma Year</th>
                <th>Instructor</th>
                <th>Is Directed Elective</th>
            </tr>
                @foreach (var courseofferings in @Model.Semester.CourseOfferings)
                {
                <tr>
                    <td>@courseofferings.Course.CourseCode</td>
                    <td>@courseofferings.DiplomaYearSection.DiplomaYear.Diploma.Title</td>
                    <td>@courseofferings.Instructor.FullName</td>
                    <td>@courseofferings.IsDirectedElective</td>
                </tr>
                }
        </thead>
    </table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Semester?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
