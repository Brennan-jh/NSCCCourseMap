@page
@model nscccoursemap_Brennan_Holmes.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CourseCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Prerequisites)
        </dt>
        <dd class="col-sm-10">
            @if (@Model.Course.Prerequisites != null && @Model.Course.Prerequisites.Count > 0)
            {
                <ul>
                    @foreach (var prerequisite in @Model.Course.Prerequisites)
                    {
                        @*<li>@prerequisite.CourseCode - @prerequisite.Title</li>*@
                        @*<li>@prerequisite.Courses.CourseCode - @prerequisite.Courses.Title</li>*@
                        <li>@prerequisite.Prerequisites.Title</li>
                    }
                </ul>
            }
            else
            {
                <span>None</span>
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
