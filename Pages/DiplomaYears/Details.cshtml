@page
@model nscccoursemap_Brennan_Holmes.Pages.DiplomaYears.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DiplomaYear</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiplomaYear.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiplomaYear.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiplomaYear.Diploma)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiplomaYear.Diploma.Title)
        </dd>
     <table class="table">
        <thead>
            <tr>
                <th>Diploma Title</th>
                <th>Course Code</th>
                <th>Course Title</th>
                <th>Semester</th>
                <th>Instructor</th>
                <th>Is Directed Elective</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var section in Model.DiplomaYear.DiplomaYearSections)
            {
                foreach (var coffering in section.CourseOfferings)
                {
                    <tr>
                        <td>@coffering.DiplomaYearSection.DiplomaYear.Title</td>
                        <td>@coffering.Course.CourseCode</td>
                        <td>@coffering.Course.Title</td>
                        <td>@coffering.Semester.Name</td>
                        <td>@coffering.Instructor.FullName</td>
                        @if (coffering.IsDirectedElective == true)
                        {
                            <td>Is Directed Elective: <span style="color: rgb(0, 255, 68);">Yes</span></td>
                        } else
                        {
                            <td>Is Directed Elective: <span style="color: rgb(255, 0, 0);">Not</span></td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.DiplomaYear?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
